@model LearnCRUD.Models.Product

@{
    ViewData["Title"] = "Products Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Products</h4>
    < hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Qty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Qty)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categories.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categories.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary mt-2">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger mt-2">Delete</a>
    <a asp-action="Index" class="btn btn-info mt-2">Back to List</a>
</div>


