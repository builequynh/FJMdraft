@model IEnumerable<Product>

@{
    ViewData["Title"] = "Product List";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-bordered table-responsive table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categories.Name)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null && Model.Any())
        {
            @foreach (var product in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => product.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(model => product.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(model => product.Qty)
                    </td>
                    <td>
                        @Html.DisplayFor(model => product.Categories.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@product.Id"
                        class="btn btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@product.Id"
                        class="btn btn-success">Details</a>
                        <a asp-action="Delete" asp-route-id="@product.Id"
                        class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">
                    <div>
                        Products not available in the database.
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>